<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mci.lara.mobile">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />

    <application
        android:name=".Lara"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Lara.Splash"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".view.splash.SplashActivity"
            android:theme="@style/Theme.Lara.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.room.RoomActivity"
            android:theme="@style/Theme.Lara.Full" />
        <activity
            android:name=".view.settings.SettingsActivity"
            android:label="@string/settings"
            android:parentActivityName=".view.main.MainActivity"
            android:theme="@style/Theme.Lara" />
        <activity
            android:name=".view.register.RegisterActivity"
            android:label="@string/register"
            android:theme="@style/Theme.Lara" />
        <activity
            android:name=".view.login.LoginActivity"
            android:label="@string/login"
            android:theme="@style/Theme.Lara" />
        <activity
            android:name=".view.main.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Lara" />
    </application>

</manifest>