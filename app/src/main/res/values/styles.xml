<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Lara" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dodger_blue_dark</item>
        <item name="colorPrimaryDark">@color/dodger_blue_dark</item>
        <item name="colorAccent">@color/heliotrope_primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@drawable/gradient_background</item>
    </style>

    <style name="Theme.Lara.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/dodger_blue_dark</item>
        <item name="colorPrimaryDark">@color/dodger_blue_dark</item>
        <item name="colorAccent">@color/heliotrope_primary</item>
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Theme.Lara.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>